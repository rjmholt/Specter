{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "PowerShell",
            "request": "launch",
            "name": "Build & Import Specter",
            "script": "dotnet publish Specter.PssaCompatibility/Specter.PssaCompatibility.csproj -f net8; Import-Module ./Specter.PssaCompatibility/bin/Debug/net8/publish/Specter.PssaCompatibility.psd1",
            "cwd": "${workspaceFolder}",
            "createTemporaryIntegratedConsole": true
        },
        {
            "type": "PowerShell",
            "request": "launch",
            "name": "Run Pester compatibility tests",
            "script": "./Tests/RunCompatibilityTests.ps1 -Detailed",
            "cwd": "${workspaceFolder}",
            "createTemporaryIntegratedConsole": true
        },
        {
            "type": "PowerShell",
            "request": "launch",
            "name": "Run current Pester file",
            "script": "dotnet publish Specter.PssaCompatibility/Specter.PssaCompatibility.csproj -f net8; Import-Module ./Specter.PssaCompatibility/bin/Debug/net8/publish/Specter.PssaCompatibility.psd1; Invoke-Pester -Path '${file}'",
            "cwd": "${workspaceFolder}",
            "createTemporaryIntegratedConsole": true
        },
        {
            "name": "PowerShell Attach to Host Process",
            "type": "PowerShell",
            "request": "attach",
            "runspaceId": 1
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}
