<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net8;net462</TargetFrameworks>
    <AssemblyName>Specter.Rules</AssemblyName>
    <RootNamespace>Specter</RootNamespace>
    <LangVersion>12</LangVersion>
    <Nullable>enable</Nullable>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <PackageId>Specter.Rules</PackageId>
    <Description>Built-in analysis and formatting rules for Specter.</Description>
  </PropertyGroup>

  <PropertyGroup Condition="'$(TargetFramework)' == 'net8'">
    <DefineConstants>$(DefineConstants);CORECLR</DefineConstants>
  </PropertyGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net8'">
    <PackageReference Include="System.Management.Automation" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net462'">
    <PackageReference Include="Microsoft.PowerShell.5.ReferenceAssemblies" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Specter.Api\Specter.Api.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Pluralize.NET" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="../Specter/Builtin/Rules/**/*.cs" Link="Builtin/Rules/%(RecursiveDir)%(Filename)%(Extension)" />
    <Compile Include="../Specter/Builtin/Editors/**/*.cs" Link="Builtin/Editors/%(RecursiveDir)%(Filename)%(Extension)" />
    <Compile Include="../Specter/Builtin/BuiltinEditors.cs" Link="Builtin/BuiltinEditors.cs" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="../Specter/Builtin/Rules/Strings.resx" Link="Builtin/Rules/Strings.resx">
      <LastGenOutput>Strings.Designer.cs</LastGenOutput>
      <Generator>ResXFileCodeGenerator</Generator>
    </EmbeddedResource>
    <Compile Update="Builtin/Rules/Strings.Designer.cs">
      <DependentUpon>Strings.resx</DependentUpon>
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <None Include="../Specter/Settings/*.json" Link="Settings/%(Filename)%(Extension)">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
</Project>
